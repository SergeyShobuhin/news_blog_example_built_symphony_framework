{% extends 'layout.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            {% if blog.category is not empty %}
            <tr>
                <th>Category</th>
                <td>{{ blog.category.name }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_blog_index') }}">back to list</a>
    <br><br>

    <a href="{{ path('app_user_blog_edit', {'id': blog.id}) }}"><button class="btn-success"> edit </button></a>
    <br><br>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
