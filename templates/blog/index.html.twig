{% extends 'layout.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <h1>Blog index</h1>

    {{ form_start(searchForm) }}
        {{ form_widget(searchForm) }}
            <button class="btn-success">{{ button_label|default('Поиск') }}</button>
    {{ form_end(searchForm) }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.title }}</td>
                <td>{{ blog.description }}</td>
                <td>{{ blog.text }}</td>
                <td>
                    <a href="{{ path('app_blog_show', {'id': blog.id}) }}"><button class="btn-primary"> show </button></a>
                    <a href="{{ path('app_blog_edit', {'id': blog.id}) }}"><button class="btn-success"> edit </button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_new') }}"><button class="btn-secondary">Create new</button></a>
{% endblock %}
